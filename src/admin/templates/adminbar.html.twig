<div id="yolobar" >
    <div id="yolotoggle">
        <span id="yolopen"><a href="#" title="Open the Yolobar" alt="Open the Yolobar">🇾</a></span>
        <span id="yoloclose"><a href="#" title="Close the Yolobar" alt="Close the Yolobar">❌</a></span>
    </div>
    <div id="yolomenu">
        <a href="{{ path('index') }}">🏡</a>
        <a id="yoloedit" href="#" data-bs-toggle="modal" data-bs-target="#yoloeditor">✏️</a>
        <a href="{{ path('_build') }}">🏗️</a>
    </div>
</div>

<div id="yoloeditor" class="modal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Modal title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <textarea></textarea>
        <script>
            const easyMDE = new EasyMDE({inputStyle: 'contenteditable', spellChecker: false, autoRefresh: true});
            easyMDE.value(`{{ md|raw }}`);
        </script>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
